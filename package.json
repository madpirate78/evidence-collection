{
  "name": "cms-evidence-platform",
  "version": "2.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "postinstall": "prisma generate",
    "build": "DATABASE_URL=$DATABASE_PUBLIC_URL prisma migrate deploy && next build",
    "start": "next start -H 0.0.0.0 -p ${PORT:-3000}",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test-cache": "chmod +x scripts/test-cache.sh && scripts/test-cache.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:rate-limit": "jest __tests__/lib/rate-limiter.test.ts",
    "test:api": "jest __tests__/api/submit-evidence.test.ts",
    "test:form": "jest __tests__/lib/ __tests__/api/submit-evidence.test.ts",
    "test:all": "jest --coverage --verbose",
    "test:security": "jest __tests__/lib/rate-limiter.test.ts",
    "security:check": "chmod +x scripts/security-check.sh && ./scripts/security-check.sh",
    "security:pentest": "chmod +x scripts/run-penetration-test.sh && ./scripts/run-penetration-test.sh",
    "perf:rate-limit": "node scripts/rate-limit-performance.js",
    "monitor:rate-limit": "node scripts/test-rate-limit.js",
    "simulate:rate-limit": "node scripts/direct-rate-limit-test.js",
    "quick:rate-test": "node scripts/quick-rate-test.js",
    "browser:rate-test": "node scripts/browser-rate-limit-test.js"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lru-cache": "^10.4.3",
    "lucide-react": "^0.468.0",
    "nanoid": "^5.1.6",
    "next": "15.5.9",
    "next-themes": "^0.4.6",
    "pg": "^8.18.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "tailwind-merge": "^2.6.1",
    "zod": "^3.25.76",
    "autoprefixer": "10.4.20",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "22.10.2",
    "@types/pg": "^8.16.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.8.1",
    "prisma": "^7.4.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "next": "15.5.9"
  }
}
